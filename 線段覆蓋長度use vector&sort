#include <iostream>
#include <algorithm>
#include <vector>
using namespace std;
#define pii pair<int, int>
bool cmp(pii a, pii b){
  if(a.first == b.first){
    return a.second > b.second;
  }
  else{
    return a.first > b.first;
  }
}
int main() {
	int n, min, max, d = 0;
  vector<pii> v;
	cout<<"請輸入有幾條線段:\n";
	cin >> n;//有幾條線段
  cout << "請先輸入線段的最小值再輸入最大值\n";
	for (int i = 0; i < n; i++) {
		cin >> min >> max;
    v.push_back({min,max});
    }
  for (int i = 0; i < n; i++) {
    cout<< v[i].first << " , " << v[i].second << endl;
	}
  sort(v.begin(), v.end(), cmp);
  for (int i = 0; i < n; i++) {
    cout<< v[i].first << " , " << v[i].second << endl;
	}
  for (int i = 0; i < n ; i++){
    int s = v[i].first;
    int e = v[i].second;
    while (i+1<n && v[i].second > v[i+1].first){
      if (v[i].second > v[i+1].second){
        i++;
      }
      else{
        e = v[i+1].second;
        i++;
      }
    }
    d = d + e - s;
  }
	cout << "線段覆蓋長度為: "<< d;
}
